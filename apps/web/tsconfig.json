{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "@config": [
        "./app/config"
      ],
      "@config/*": [
        "./app/config/*"
      ],
      "@modules/*": [
        "./app/modules/*"
      ],
      "@api/*": [
        "./app/api/*"
      ],
      "@shared/*": [
        "./app/shared/*"
      ],
      "@validators/*": [
        "./app/validators/*"
      ],
      "@providers/*": [
        "./app/providers/*"
      ],
      "@components/*": [
        "./app/components/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/types/src/any.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
