{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "outDir": "build",
    "rootDir": "./",
    "baseUrl": "./src",
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "ES2021.String",
    ],
    "allowJs": true,
    "checkJs": false,
  }
}
